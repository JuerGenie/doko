{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {},
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "keyofStringsOnly": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "example"],
  "exclude": ["node_modules"]
}
